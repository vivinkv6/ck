<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script
      src="https://kit.fontawesome.com/64d58efce2.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/stylesheets/user/login.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
    <title>Sign in & Sign up Form</title>
  </head>
  <body>
    <div class="container">
      <div class="forms-container">
        <div class="signin-signup">
          <form action="/user/login" method="post" class="sign-in-form">
            <h2 class="title">Sign in</h2>

            <div class="input-field">
              <i class="fas fa-user"></i>
              <input
                type="email"
                placeholder="Email"
                id="email"
                name="email"
                required
              />
            </div>

            <div class="input-field">
              <i class="fas fa-lock"></i>
              <input
                type="password"
                placeholder="Password"
                id="password"
                name="password"
                required
              />
            </div>

            <button type="button" id="btn1" class="btn" style="color: #fff">
              LOGIN
            </button>

            <p class="social-text">Or Sign in with social platforms</p>

            <div class="social-media">
              <a href="#" class="social-icon">
                <i class="fab fa-facebook-f"></i>
              </a>

              <a href="#" class="social-icon">
                <i class="fab fa-twitter"></i>
              </a>

              <a href="#" class="social-icon">
                <i class="fab fa-google"></i>
              </a>

              <a href="#" class="social-icon">
                <i class="fab fa-linkedin-in"></i>
              </a>
            </div>
          </form>

          <form action="/user/signup" method="post" class="sign-up-form">
            <h2 class="title">Sign up</h2>

            <div class="input-field">
              <i class="fas fa-user"></i>
              <input
                type="text"
                name="name"
                id="name"
                placeholder="Name"
                required
              />
            </div>

            <div class="input-field">
              <i class="fas fa-envelope"></i>
              <input
                type="email"
                name="email"
                id="emails"
                placeholder="Email"
                required
              />
            </div>
            <!-- <%# if (emailExist) { %>
                <p style="color: red;">Email Already Exist</p>
              <%# } %> -->

            <div class="input-field">
              <i class="fas fa-lock"></i>
              <input
                type="password"
                name="password"
                id="passwords"
                placeholder="Password"
                required
              />
            </div>
            <%# if (wrong) { %>
            <!-- <p style="color: red;">Wrong Password</p> -->
            <%# } %>
            <div class="input-field">
              <i class="fas fa-lock"></i>
              <input
                type="password"
                name="confirm"
                id="confirm"
                placeholder="Confirm Password"
                required
              />
            </div>

            <!-- New Fields -->
            <div class="input-field">
              <i class="fas fa-map-marker-alt"></i>
              <input
                type="text"
                name="address"
                id="address"
                placeholder="Address"
                required
              />
            </div>

            <div class="input-field">
              <i class="fas fa-map-pin"></i>
              <input
                type="text"
                name="pincode"
                id="pincode"
                placeholder="Pincode"
                required
              />
            </div>

            <div class="input-field">
              <i class="fas fa-phone"></i>
              <input
                type="tel"
                name="phone"
                id="phone"
                placeholder="Phone"
                required
              />
            </div>

            <button type="button" class="btn" id="btn2" style="color: #fff">
              SIGN UP
            </button>
          </form>
        </div>
      </div>

      <div class="panels-container">
        <div class="panel left-panel">
          <div class="content">
            <h3>New here ?</h3>
            <p>
              Lorem ipsum, dolor sit amet consectetur adipisicing elit. Debitis,
              ex ratione. Aliquid!
            </p>
            <button class="btn transparent" id="sign-up-btn">Sign up</button>
          </div>
          <img src="/images/login.svg" class="image" alt="" />
        </div>
        <div class="panel right-panel">
          <div class="content">
            <h3>One of us ?</h3>
            <p>
              Lorem ipsum dolor sit amet consectetur adipisicing elit. Nostrum
              laboriosam ad deleniti.
            </p>
            <button class="btn transparent" id="sign-in-btn">Sign in</button>
          </div>
          <img src="/images/login2.svg" class="image" alt="" />
        </div>
      </div>
    </div>
    <script>
      const btn1 = document.getElementById("btn1");
      const btn2 = document.getElementById("btn2");
      const thrissurPincodes = [
        680001, 680002, 680003, 680004, 680005, 680006, 680007, 680008, 680010,
        680011, 680012, 680013, 680014, 680015, 680016, 680017, 680026, 680027,
        680028, 680101, 680102, 680103, 680104, 680121, 680122, 680123, 680125,
        680301, 680302, 680304, 680305, 680306, 680307, 680308, 680309, 680311,
        680312, 680313, 680316, 680317, 680319, 680321, 680322, 680323, 680501,
        680502, 680503, 680504, 680505, 680506, 680507, 680508, 680509, 680510,
        680511, 680512, 680514, 680515, 680517, 680518, 680519, 680521, 680522,
        680523, 680541, 680542, 680543, 680544, 680546, 680547, 680549, 680551,
        680552, 680554, 680555, 680561, 680562, 680563, 680564, 680566, 680567,
        680568, 680569, 680571, 680573, 680574, 680581, 680583, 680584, 680585,
        680586, 680587, 680588, 680589, 680590, 680591, 680592, 680593, 680594,
        680595, 680600, 680601, 680602, 680603, 680604, 680611, 680612, 680613,
        680614, 680615, 680616, 680617, 680618, 680620, 680621, 680623, 680631,
        680641, 680651, 680652, 680653,
      ];

      //signin
      btn1.addEventListener("click", async () => {
        const email = document.getElementById("email").value;
        const password = document.getElementById("password").value;

        console.log(email);
        console.log(password);
        const sendData = await fetch("http://localhost:3000/user/login", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ email, password }),
        })
          .then((res) => {
            console.log(res);
            if (res.redirected) {
              window.location.href = res.url;
            } else {
              alert("Invalid Email or Password");
            }
          })
          .then((data) => {
            console.log(data);
          })
          .catch((err) => {
            console.log(err);
          });
      });

      //signup
      btn2.addEventListener("click", async () => {
        const email = document.getElementById("emails").value;
        const password = document.getElementById("passwords").value;
        const name = document.getElementById("name").value;
        const address = document.getElementById("address").value;
        const pincode = document.getElementById("pincode").value;
        const confirm = document.getElementById("confirm").value;
        const phone = document.getElementById("phone").value;
        console.log({
          email,
          password,
          name,
          address,
          pincode,
          confirm,
          phone,
        });

        if (password !== confirm) {
          alert("Wrong Password");
        } else {
          if (!thrissurPincodes.includes(Number(pincode))) {
            alert("Limited to Thrissur District");
          } else {
            const sendData = await fetch("http://localhost:3000/user/signup", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify({
                email,
                password,
                confirm,
                address,
                phone,
                pincode,
                name,
              }),
            })
              .then((res) => {
                console.log(res);
                if (res.redirected) {
                  window.location.href = res.url;
                } else {
                  alert("Invalid Email or Password");
                }
              })
              .then((data) => {
                console.log(data);
              })
              .catch((err) => {
                console.log(err);
              });
          }
        }
      });
    </script>

    <script src="/javascript/login.js"></script>
  </body>
</html>
