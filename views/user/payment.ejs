<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dummy Payment Gateway</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #f8f9fa;
      }

      .container-box {
        box-shadow: 0px 0px 20px 0px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        padding: 40px;
        height: auto;
      }

      .image-container {
        max-width: 100%;
      }

      .form-container {
        max-width: 100%;
      }

      img {
        max-width: 100%;
        height: 450px;
        display: block;
        margin: auto;
        margin-bottom: 20px;
        border-radius: 10px;
      }

      @media screen and (max-width: 900px) {
        img {
          height: 380px;
        }
      }
      @media screen and (max-width: 500px) {
        .container-box {
          margin-top: 100px;
        }
        img {
          height: 300px;
        }
      }
    </style>
  </head>
  <body>
    <div
      class="container d-flex justify-content-center align-items-center vh-100"
    >
      <div class="container-box bg-white">
        <div class="row">
          <div class="col-md-6">
            <div class="image-container">
              <img
                src="https://images.pexels.com/photos/4482900/pexels-photo-4482900.jpeg"
                alt="Online Payment Image"
              />
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-container">
              <h1 class="text-center mb-4">Enter Payment Details</h1>
              <form id="paymentForm" action="" method="post">
                <div class="mb-3">
                  <label for="amount" class="form-label">Amount:</label>
                  <input
                    type="text"
                    class="form-control"
                    id="amount"
                    value="<%= total %>"
                    name="amount"
                    required
                  />
                </div>
                <div class="mb-3">
                  <label for="cardNumber" class="form-label"
                    >Card Number:</label
                  >
                  <input
                    type="text"
                    class="form-control"
                    id="cardNumber"
                    name="cardNumber"
                    required
                  />
                </div>
                <div class="row mb-3">
                  <div class="col">
                    <label for="expiryDate" class="form-label"
                      >Expiry Date:</label
                    >
                    <input
                      type="text"
                      class="form-control"
                      id="expiryDate"
                      name="expiryDate"
                      placeholder="MM/YY"
                      required
                    />
                  </div>
                  <div class="col">
                    <label for="cvv" class="form-label">CVV:</label>
                    <input
                      type="text"
                      class="form-control"
                      id="cvv"
                      name="cvv"
                      required
                    />
                  </div>
                </div>
                <button type="submit" class="btn btn-primary btn-block">
                  Pay Now
                </button>
              </form>
              <div id="response" class="mt-3"></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
